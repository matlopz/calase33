<head>
  
  <link rel="stylesheet" href="/css/modal.css">
</head>
<body>
  <h2>Carrito de Compras</h2>
  <ul id="cartsList">
    {{#each cartRender}}
    <li>
      <strong>ID:</strong> {{product._id}}<br>
      <strong>TÃ­tulo:</strong> {{product.title}}<br>
      <strong>Precio:</strong> ${{product.price}}<br>
      Cantidad: <span id="quantity_{{product._id}}">{{quantity}}</span>
      <button onclick="decrementQuantity('{{product._id}}')">-</button>
      <button onclick="incrementQuantity('{{product._id}}')">+</button>
    </li>
    {{/each}}
  </ul>
  <button id="finalizePurchaseButton" onclick="finalizePurchase()">Finalizar Compra</button>

<div id="purchaseSummaryModal" class="modal">
  <div class="modal-content">
    <span class="close" id="closeSummaryModal">&times;</span>
    <h3>Resumen de la Compra</h3>
   
  </div>
</div>



  <script src="/js/carrito.js"></script>
</body>
